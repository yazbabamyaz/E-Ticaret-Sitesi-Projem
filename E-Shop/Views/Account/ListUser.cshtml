@model UserViewModel
@{
    ViewData["Title"] = "ListUser";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>ListUser</h1>

<table class="table table-bordered">
    <tr>
        <th>Ad-Soyad</th>
        <th>Mail</th>
        <th>Kullanıcı</th>
        <th>Şifre</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model.ListUser)
    {
        <tr>
            <td>@item.Name @item.SurName</td>
            <td>@item.Email</td>
            <td>@item.UserName</td>
            <td>@item.Password</td>
            <td>@Html.ActionLink("Sil","UserDelete",new {item.Id}, new {@class="btn btn-danger",onclick="return confirm('Silmek istiyor musun')"})</td>
        </tr>
    }
</table>