@model CategoryListViewModel

@*Kategorileri listeleyip yanlarına hangi kategoriden kaç adet ürün olduğunu bastım.*@
<div class="col-sm-3" style="margin-top:30px">
                <div class="left-sidebar">
                    <div class="brands_products">
                        <h2>KATEGORİLER</h2>
                        <div class="brands-name">
                            @foreach (var item in Model.Categories)
                            {
                                <ul class="nav nav-pills nav-stacked">
                                    <li><a href="/Category/Details/@item.Id"><span class="pull-right">(@Model.products.Where(x=>x.CategoryId==item.Id).Count())</span>@item.Name</a></li>

                                </ul>
                            }

                        </div>

                    </div>

                </div>
            </div>



